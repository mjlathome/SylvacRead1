<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mjlathome.sylvacread1.app.MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan for BT Device"
        android:id="@+id/buttonScanBT"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:onClick="onClickScanBT" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Value"
        android:id="@+id/buttonGetValue"
        android:onClick="onClickGetValue"
        android:layout_below="@+id/buttonGetId"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Zero"
        android:id="@+id/buttonSetZero"
        android:layout_below="@+id/buttonGetValue"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonGetValue"
        android:onClick="onClickSetZero" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Id"
        android:id="@+id/buttonGetId"
        android:layout_below="@+id/buttonScanBT"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonGetValue"
        android:onClick="onClickGetId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set mm"
        android:id="@+id/buttonSetMm"
        android:layout_below="@+id/buttonSetZero"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonSetZero"
        android:onClick="onClickSetMm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Battery"
        android:id="@+id/buttonGetBattery"
        android:layout_below="@+id/buttonSetMm"
        android:layout_alignParentStart="true"
        android:onClick="onClickGetBattery" />

</RelativeLayout>
